!!!
%html
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    %title RNP Contest ❖ Пиши код! @ Побеждай!
    %link{ :rel => 'shortcut icon', :href => '/images/rnp.ico', :type => 'image/x-icon' }
    = stylesheet_link_tag 'application'
    
    - if RAILS_ENV == 'production'
      <script type="text/javascript">
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
      </script>
      <script type="text/javascript">
      try {
      var pageTracker = _gat._getTracker("UA-12926065-1");
      pageTracker._trackPageview();
      } catch(err) {}</script>
    
  %body
    #dark-side
      = link_to "<h1>Ruby NoName Podcast <strong>Contest</strong></h1>", page_path('home')
      %ul
        %li= link_to_unless_current '<span>Домой, к маме</span>', page_path('home')
        %li= link_to_unless_current '<span>Результаты</span>', users_path
        %li= link_to_unless_current '<span>Участие</span>', new_user_path
        %li= link_to_unless_current '<span>Про post-hook</span>', page_path('hook')
        %li= link_to_unless_current '<span>Правила</span>', page_path('rules')
        %li= link_to_unless_current '<span>FAQ</span>', page_path('faq')
        %li= link_to_unless_current '<span>Приз</span>', page_path('yummy')
        %li= link_to_unless_current '<span>Подкаст</span>', 'http://ruby.rpod.ru'
    #content
      = yield
